# Backend Environment Variables
NODE_ENV=production
PORT=3000

# MongoDB - Use MongoDB Atlas for production
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/metcon?retryWrites=true&w=majority

# JWT Secret - Generate a strong random secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Frontend Environment Variables (build-time)
VITE_API_URL=https://your-backend-url.ondigitalocean.app

# Optional: MongoDB root credentials (only for self-hosted MongoDB)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-password

